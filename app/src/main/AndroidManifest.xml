<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CVSSClientTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".SetupNextGameActivity"
            android:exported="false"
            android:label="@string/title_activity_setup_next_game"
            android:theme="@style/Theme.CVSSClientTheme" />
        <activity
            android:name=".MatchManagerActivity"
            android:exported="false"
            android:label="@string/title_activity_match_manager"
            android:theme="@style/Theme.CVSSClientTheme" />
        <activity
            android:name=".TeamManagerActivity"
            android:exported="false"
            android:label="@string/title_activity_team_manager"
            android:theme="@style/Theme.CVSSClientTheme" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CVSSClientTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>